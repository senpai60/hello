<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plato - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #1e293b;
      }
      ::-webkit-scrollbar-thumb {
        background: #475569;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #64748b;
      }
    </style>
  </head>
  <body class="bg-zinc-950 text-slate-300">
    <div id="app-wrapper">
      <%- include('components/_navbar') %>

      <main class="container mx-auto px-4 lg:px-8 py-8">
        <div class="grid grid-cols-12 gap-8">
          <div class="col-span-12 lg:col-span-8">
            <%- include('components/_create_post_form') %>

            <div class="space-y-6">
              <% posts.forEach(post => { %> <%- include('components/_post_card',
              { post: post }) %> <% }) %>
            </div>
          </div>

          <aside class="col-span-12 lg:col-span-4">
            <div class="sticky top-24 space-y-6">
              <%- include('components/_who_to_follow', { users: users }) %> <%-
              include('components/_trending', { trending: trending }) %>
            </div>
          </aside>
        </div>
        <%- include('components/_pop_links') %>
      </main>
    </div>
  </body>
</html>
