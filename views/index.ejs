<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plato - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body
    class="bg-gradient-to-br from-gray-900 via-gray-900 to-black text-gray-100 min-h-screen"
  >
    <%- include('components/_navbar') %>

    <main class="pt-20 pb-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2 space-y-6">
            <div class="space-y-6" id="posts-container">
              <% if(posts.length === 0) { %>
                <div class="text-center py-12 fade-in" id="empty-state">
                  <div 
class="w-20 h-20 mx-auto mb-4 bg-gray-800 rounded-full flex items-center justify-center">
                    <i class="ri-chat-3-line text-2xl text-gray-500"></i>
                  </div>
                  <h3 class="text-lg font-medium text-gray-300 mb-2">No posts yet</h3>
                  <p class="text-gray-500">Share your first thought to get started!</p>
                </div>
              <% } %>
              <% posts.forEach(post => { %>
                <%- include('components/_post_card_new', { post: post }) %>
              <% }) %>
            </div>
          </div>

          <aside class="lg:col-span-1 space-y-6">
            <%- include('components/_who_to_follow', { users: users, currentUser: currentUser }) %>
            <%- include('components/_trending', { trending: trending }) %>
          </aside>
        </div>
      </div>
    </main>

    <%- include('components/_pop_links') %>
    <%- include('components/_create_post_modal') %>
    <script src="/js/script.js"></script>
  </body>
</html>