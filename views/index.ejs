<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plato - Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #1e293b;
      }
      ::-webkit-scrollbar-thumb {
        background: #475569;
        border-radius: 10px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #64748b;
      }
    </style>
  </head>
  <body class="bg-zinc-950 text-slate-300">
  <div id="app-wrapper">
    <%- include('components/_navbar') %>

    <main class="container mx-auto px-4 lg:px-8 py-8">
      <div class="grid grid-cols-12 gap-8">
        <div class="col-span-12 lg:col-span-8">

          <form action="/createpost/create" method="POST" class="bg-zinc-900 p-6 rounded-xl shadow-lg mb-6">
            <div class="mb-4">
              <label for="text" class="block text-slate-300 font-semibold mb-2">
                Write your post
              </label>
              <textarea
                id="text"
                name="caption"
                rows="6"
                class="w-full px-4 py-3 bg-zinc-800 border border-zinc-700 rounded-lg text-slate-300 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
                placeholder="What's on your mind?"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="bg-blue-500 text-white font-semibold px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors duration-200"
            >
              Post
            </button>
          </form>
          <div class="space-y-6">
            <% if(posts.length === 0) { %>
              <p class="text-zinc-400">You haven't posted anything yet.</p>
            <% } %> 
            <% posts.forEach(post => { %>
              <% if(post.image) { %>
                <%- include('components/_image_posts', { post: post }) %>
              <% } else { %>
                <%- include('components/_text_posts', { post: post }) %>
              <% } %>
            <% }) %>
          </div>
        </div>

        <aside class="col-span-12 lg:col-span-4">
          <div class="sticky top-24 space-y-6">
            <%- include('components/_who_to_follow', { users: users, currentUser: currentUser }) %>
            <%- include('components/_trending', { trending: trending }) %>
          </div>
        </aside>
      </div>

      <%- include('components/_pop_links') %>
    </main>
  </div>
  <script src="/js/script.js"></script>
</body>

</html>