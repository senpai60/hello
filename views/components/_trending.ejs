<div class="bg-zinc-800 p-5 rounded-2xl shadow-lg">
    <h3 class="text-xl font-bold text-white mb-4">Trending Topics</h3>
    <div class="space-y-3">
        <% trending.forEach(topic => { %>
            <div>
                <p class="font-semibold text-indigo-400 hover:underline cursor-pointer">#<%= topic.name %></p>
                <p class="text-sm text-zinc-400"><%= topic.posts %> posts</p>
            </div>
        <% }) %>
    </div>
</div>
