<div class="bg-zinc-800 p-5 rounded-2xl shadow-lg">
    <h3 class="text-xl font-bold text-white mb-4">Who to follow</h3>
    <div class="space-y-4">
        <% users.forEach(user => { %>
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <img src="<%= user.avatar %>" alt="<%= user.name %> avatar" class="w-10 h-10 rounded-full object-cover border-2 border-zinc-700">
                    <div>
                        <p class="font-semibold text-white"><%= user.name %></p>
                        <p class="text-sm text-zinc-400">@<%= user.username %></p>
                    </div>
                </div>
                <button class="bg-zinc-700 hover:bg-zinc-600 text-white font-semibold text-sm py-1.5 px-4 rounded-full transition-colors duration-200">
                    Follow
                </button>
            </div>
        <% }) %>
    </div>
</div>
