<article class="bg-zinc-800 rounded-2xl shadow-lg overflow-hidden">
    <div class="p-5">
        <div class="flex items-center space-x-4">
            <img src="<%= post.avatar %>" alt="<%= post.name %> avatar" class="w-12 h-12 rounded-full object-cover border-2 border-zinc-700">
            <div>
                <p class="font-semibold text-white"><%= post.name %></p>
                <p class="text-sm text-zinc-400">posted <%= post.time %> ago</p>
            </div>
        </div>
        <p class="mt-4 text-zinc-300"><%= post.content %></p>
    </div>
    <% if (post.image) { %>
        <img src="<%= post.image %>" alt="Post image" class="w-full object-cover">
    <% } %>
    <div class="p-5 flex items-center justify-between text-zinc-400 <%= post.image ? '' : 'border-t border-zinc-700' %>">
        <div class="flex items-center space-x-6">
            <button class="flex items-center space-x-2 hover:text-red-500 transition-colors duration-200">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span><%= post.likes %></span>
            </button>
            <button class="flex items-center space-x-2 hover:text-blue-500 transition-colors duration-200">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <span><%= post.comments %></span>
            </button>
        </div>
        <button class="flex items-center space-x-2 hover:text-green-500 transition-colors duration-200">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12s-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
            <span>Share</span>
        </button>
    </div>
</article>
